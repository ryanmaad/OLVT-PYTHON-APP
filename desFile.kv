<MyGridLayout>

    name: name
    rocket: rocket
    color: color

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False

            Label:
                text: "Rocket"
            TextInput:
                id: rocket
                multiline: False

            Label:
                text: "Color"
            TextInput:
                id: color
                multiline: False
        
        Button:
            text: "Submit"
            font_size: 32
            on_press: root.press()


